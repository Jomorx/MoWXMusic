/* components/video-item-v2/index.wxss */
.container {
    height: 140rpx;
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 20rpx;
}

.cover {
    width: 35%;
    height: 100%;
    position: relative;
}

.bg {
    width: 100%;
    height: 100%;
}

.play-time{
    position: absolute;
    z-index: 1;
    color: white;
    bottom: 0;
    right: 0;
}
.icon{
    width: 30rpx !important;
    height: 25rpx !important;
    margin-right: 10rpx;
}
.info {
    height: 100%;
    flex: 1;
    padding-left: 20rpx;
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.author{
    display: block;
}
